while True:
  n = input("Input x,y,z :")
  if n == "Exit" or n == "exit":
    print("Program ended.")
    break
  else:
    f = n.split(",")
    if len(f) == 3:
      x,y,z = n.split(",")
      if x.isalpha() or y.isalpha() or z.isalpha():
        print("Invalid input.")
      else:
        x,y,z = float(x), float(y), float(z)
        if x > 0 and y > 0 and z > 0:
          volume = (((x*y)/2)*z) / 3
          print("Volume of Tetahedron is %.2f cubic unit."%volume)
        else:
          print("Invalid input.")
    else:
      print("Enter 3 values.")
 #test4 hmr error tat nay dr shrr ma ya buu kal pr
 #test4 ka Invalid input ma hote pl nk Enter 3 values so pee paw nay tr ma lr
 #ak test mr thu ka Done so pee pl htae lite tr
 #ak mr n.isalpha() so Invalid input so pee htae lite
